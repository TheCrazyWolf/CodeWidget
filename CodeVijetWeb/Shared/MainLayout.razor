@inherits LayoutComponentBase

<PageTitle>CodeVijetWeb</PageTitle>

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout Style="background-color: #e3eaf2;">
    <MudAppBar Style="background-color: #e3eaf2;" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudText Typo="Typo.subtitle1" Color="Color.Dark" Class="ml-3">Application</MudText>
        <MudSpacer/>
    </MudAppBar>
    <MudDrawer Style="background-color: #e3eaf2;" @bind-Open="_drawerOpen"
               Width="300px"
               ClipMode="DrawerClipMode.Always" Elevation="0">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudPaper Style="padding: 15px; margin: 10px 20px 10px 20px; height: 88vh;">
            @Body
        </MudPaper>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}